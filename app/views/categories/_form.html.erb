<%= form_with model: @category, local: true do |form| %>
  <% if @category.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4">
    <%= form.label :name, "Category Name", class: "block text-lg font-semibold" %>
    <%= form.text_field :name, class: "mt-2 block w-full px-4 py-2 border rounded-lg", required: true %>
  </div>
  <div class="mb-4">
    <%= form.label :parent_id, "Parent Category", class: "block text-lg font-semibold" %>
    <%= form.collection_select :parent_id, Category.where(parent_id: nil), :id, :name, include_blank: true, class: "mt-2 block w-full px-4 py-2 border rounded-lg" %>
  </div>
  <%= form.submit @category.new_record? ? "Create Category" : "Update Category", class: "bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600" %>
<% end %>
<%= link_to 'Back to Categories', categories_path, class: "mt-4 inline-block text-blue-500 underline" %>
