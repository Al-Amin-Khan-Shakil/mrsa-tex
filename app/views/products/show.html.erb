<div class="max-w-4xl mx-auto my-8 bg-white shadow-md rounded-lg p-6">
  <!-- Product Name -->
  <h2 class="text-3xl font-bold text-gray-800 mb-4">
    <%= @product.name %>
  </h2>
  <!-- Counties and Sub-Counties -->
  <div class="space-y-6">
    <% @product.variant_names.each do |variant_name| %>
      <div class="border border-gray-300 rounded-lg p-4">
        <!-- variant name Name -->
        <h2 class="text-2xl font-semibold text-gray-700 mb-2">
          variant name: <%= variant_name.name %>
        </h2>
        <!-- Sub-Counties -->
        <h3 class="text-lg font-medium text-gray-600">Value:</h3>
        <ul class="list-disc list-inside text-gray-600">
          <% variant_name.variant_values.each do |variant_values| %>
            <li><%= variant_values.value %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <!-- Back Button -->
  <div class="mt-6">
    <%= link_to "Back to Products", products_path, class: "text-blue-500 hover:text-blue-700 font-medium" %>
  </div>
</div>
