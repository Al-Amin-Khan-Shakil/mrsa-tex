<div class="max-w-6xl mx-auto my-8">
  <!-- Page Title -->
  <h2 class="text-4xl font-bold text-gray-800 mb-6">Products</h2>
  <!-- Add Product Button -->
  <div class="flex justify-end mb-4">
    <%= link_to "Add Product", new_product_path, class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md shadow" %>
  </div>
  <!-- Products Table -->
  <div class="bg-white shadow-md rounded-lg">
    <table class="w-full table-auto">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-gray-600 font-medium">#</th>
          <th class="px-6 py-3 text-left text-gray-600 font-medium">Name</th>
          <th class="px-6 py-3 text-left text-gray-600 font-medium">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @products.each_with_index do |product, index| %>
          <tr>
            <td class="px-6 py-4 text-gray-700"><%= index + 1 %></td>
            <td class="px-6 py-4 text-gray-700"><%= product.name %></td>
            <td class="px-6 py-4">
              <!-- Actions: Show, Edit, Delete -->
              <div class="flex space-x-2">
                <%= link_to "Show", product_path(product), class: "text-blue-500 hover:text-blue-700 font-medium" %>
                <%= link_to "Edit", edit_product_path(product), class: "text-yellow-500 hover:text-yellow-700 font-medium" %>
                <%= button_to "Delete", product_path(product), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700 font-medium" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
