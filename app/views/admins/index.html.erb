<div class="w-full">
  <% flash.each do |key, message| %>
    <div class="<%= key == 'alert' ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %> p-4 mb-4 rounded">
      <p><%= message %></p>
    </div>
  <% end %>
  <!-- Page Header -->
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-extrabold bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 text-transparent bg-clip-text">
      Admin Management
    </h1>
    <%= link_to 'Add Admin', new_admin_path, class: "bg-gradient-to-r from-green-400 to-green-600 text-white px-5 py-2 rounded-lg shadow-md hover:from-green-500 hover:to-green-700 transform hover:scale-105 transition" %>
  </div>
  <!-- Table -->
  <% if @admins.any? %>
    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
      <table class="min-w-full border border-gray-200 rounded-lg overflow-hidden">
        <!-- Table Header -->
        <thead class="bg-gradient-to-r from-indigo-500 to-purple-500 text-white uppercase text-sm font-semibold">
          <tr>
            <th class="py-4 px-6 text-left">Full Name</th>
            <th class="py-4 px-6 text-left">Phone</th>
            <th class="py-4 px-6 text-left">Role</th>
            <th class="py-4 px-6 text-left">Gender</th>
            <th class="py-4 px-6 text-left">Actions</th>
          </tr>
        </thead>
        <!-- Table Body -->
        <tbody class="text-gray-800 text-sm divide-y divide-gray-200">
          <% @admins.each do |admin| %>
            <tr class="hover:bg-gray-100">
              <td class="py-4 px-6"><%= admin.f_name %> <%= admin.l_name %></td>
              <td class="py-4 px-6"><%= admin.phone_number %></td>
              <td class="py-4 px-6 font-medium text-indigo-600 capitalize"><%= admin.role %></td>
              <td class="py-4 px-6 font-medium text-purple-600 capitalize"><%= admin.gender %></td>
              <td class="py-4 px-6 flex space-x-3">
                <%= link_to 'View', admin_path(admin), class: "text-blue-500 hover:text-blue-700 font-semibold hover:underline" %>
                <%= link_to 'Edit', edit_admin_path(admin), class: "text-green-500 hover:text-green-700 font-semibold hover:underline" %>
                <%= button_to 'Delete', admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:text-red-700 font-semibold hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-center text-gray-500 mt-6">
      <span class="bg-gradient-to-r from-pink-500 to-purple-500 text-white px-4 py-2 rounded-lg">
        No admins found.
      </span>
    </p>
  <% end %>
</div>
